{% extends 'base.html.twig' %}

{% block title %}Types{% endblock %}
{% block titrePage %}Liste des types{% endblock %}

{% block body %}
    <div class="row p-2 m-2">
        {% for type in types %}
            <div class="col-6">
                <div class="row align-items-center">
                    <div class="col-3">
                        <img src="{{ asset('images/types/' ~ type.image) }}" class="type-image img-fluid">
                    </div>
                    <div class="col">
                        <h2>
                            <a href="">
                                {{type.libelle}}
                            </a>
                        </h2>
                    </div>
                </div>
                                  
            </div>
        {% endfor %}
    </div>
{% endblock %}
